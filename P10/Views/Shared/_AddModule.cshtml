@model IList<P10.Models.CourseModule>
<table id="ExT" class="table table-bordered">
    <thead>
        <tr>
            <th>Module Name</th>
            <th>Duration</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input type="text" name="Modules[@i].ModuleName" value="@Model[i].ModuleName" />
                </td>
                <td>
                    <input type="number" name="Modules[@i].Duration" value="@Model[i].Duration" />
                </td>
                <td>
                    <button type="button" onclick="deleteItem(this)" class="btn btn-danger">Remove</button>
                </td>

            </tr>

        }
    </tbody>
</table>
<input type="hidden" id="HIndex" value="@Model.Count" />